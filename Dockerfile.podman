FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies with conflict resolution
RUN pip install --no-cache-dir --upgrade pip

# Install packages one by one to avoid conflicts
RUN pip install --no-cache-dir flask==2.3.3
RUN pip install --no-cache-dir flask-socketio==5.3.6
RUN pip install --no-cache-dir websockets==11.0.3
RUN pip install --no-cache-dir pydub==0.25.1
RUN pip install --no-cache-dir ffmpeg-python
RUN pip install --no-cache-dir srt==3.5.3
RUN pip install --no-cache-dir transformers==4.35.2
RUN pip install --no-cache-dir torch==2.1.0
RUN pip install --no-cache-dir torchaudio==2.1.0
RUN pip install --no-cache-dir numpy==1.24.3
RUN pip install --no-cache-dir requests==2.31.0
RUN pip install --no-cache-dir python-socketio==5.9.0
RUN pip install --no-cache-dir eventlet==0.33.3

# Install whisper and faster-whisper
RUN pip install --no-cache-dir openai-whisper==20231117
RUN pip install --no-cache-dir faster-whisper==0.10.0

# Install argostranslate with compatible ctranslate2
RUN pip install --no-cache-dir ctranslate2==4.6.0
RUN pip install --no-cache-dir argostranslate==1.9.0

# Copy the application code
COPY . .

# Create directories for models and data
RUN mkdir -p /app/models /app/installed_models /app/static /app/templates

# Expose ports
EXPOSE 5000 5001

# Set environment variables
ENV PYTHONPATH=/app
ENV CUDA_VISIBLE_DEVICES=0
ENV CUDA_DEVICE_ORDER=PCI_BUS_ID
ENV PYTORCH_NVML_BASED_CUDA_CHECK=1
ENV PYTORCH_CUDA_ALLOC_CONF=expandable_segments:True,max_split_size_mb:512
ENV CUDA_LAUNCH_BLOCKING=0
ENV BNB_CUDA_VERSION=""

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/local-whisper/health || exit 1

# Run the application
CMD ["python", "app.py"]